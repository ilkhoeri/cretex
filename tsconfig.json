{
  "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "skipLibCheck": true,
    "removeComments": true, // Hilangkan komentar untuk hasil yang lebih kecil
    "sourceMap": true, // Tambahkan sourcemap untuk debugging
    "inlineSources": true, // Sertakan source dalam sourcemap
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts", "src/tests/**"]
}
